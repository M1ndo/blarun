[Unit]
Description=Pull GitHub repository and run blarun
Requires=network.target
After=network.target

[Service]
Type=oneshot
# TODO - replace with actual repository name
WorkingDirectory=/home/blablarun
ExecStartPre=/usr/bin/git pull
ExecStart=/usr/bin/blarun --repository /home/blablarun --commit-file /home/commit_file --input-file /home/input.txt --expected-output /home/output.txt

[Install]
WantedBy=multi-user.target
